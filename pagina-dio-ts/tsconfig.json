{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",                                      /* Control what method is used to detect module-format JS files. */
    "module": "commonjs",                                
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "esModuleInterop": true,                           
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules" 
  ]
}
